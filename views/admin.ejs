            <section class="flex flex-col gap-y-4">
              <h3 class="text-center">
                Are you sure you want to delete <span class="font-bold" id="target-alias">HOTDOG</span>?
              </h3>
            </section>
            <footer class="flex justify-end gap-x-4 mt-4">
              <button class="btn" type="button" data-action="close-modal">
                Cancel
              </button>
              <button class="btn btn-red" type="submit">
                Confirm
              </button>
