      <!-- modals -->

      <div class="w-full h-full fixed z-50 left-0 top-0 backdrop-blur-sm bg-black/40 hidden place-items-center" id="modal-container">
        <div class="p-4 md:p-0 w-full" id="modal">

          <!-- create department -->

          <form class="bg-white shadow max-w-[400px] rounded-lg mx-auto p-4 hidden" data-content="create-department" id="create-department-modal">
            <header class="flex justify-between items-center">
              <h2 class="font-poppins text-xl font-bold">
                Create Department
              </h2>
              <button class="p-2 rounded-lg bg-gray-100 hover:bg-gray-200" type="button" data-action="close-modal">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
