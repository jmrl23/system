<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head/meta') %>
    <title>PTC Reservation | Sign In</title>
    <%- include('partials/head/resource') %>
  </head>
  <body>
    <%- include('partials/body/noscript') %>
    <main class="flex flex-col lg:flex-row min-h-screen">
      <section class="w-full lg:max-w-screen-sm flex flex-col h-screen justify-center p-4">
        <div class="mt-auto">
          <img 
            class="mx-auto w-[200px]"
            src="/assets/image/app-logo.svg" 
            width="129" 
            height="32" 
            alt="Subject Reservation System Logo"
          />
          <p class="my-8 text-black/60 text-center text-sm">
            Sign in with your organization's email
          </p>
          <% if (typeof error !== 'undefined') { %>
            <div class="bg-red-100 border border-red-500 text-red-500 rounded pl-4 pr-2 py-2 my-4 max-w-sm mx-auto flex justify-between" id="error-container">
              <div>
                <h3 class="font-bold uppercase">Error</h3>
                <p>
                  <%= error %>
                </p>
              </div>
              <div>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 lg:cursor-pointer" id="error-close-button">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>                
              </div>
            </div>
            <script nonce="<%= config.NONCE %>" id="error-script">
              (function () {
                const errorContainer = document.querySelector('#error-container')
                const errorScript = document.querySelector('#error-script')
                const errorCloseButton = errorContainer.querySelector('#error-close-button')
                errorCloseButton.addEventListener('click', function () {
                  errorContainer.remove()
                  errorScript.remove()
                })
              })()
            </script>
          <% } %>
          <a class="btn black px-4 py-2 flex items-center justify-center gap-x-2 max-w-[250px] mx-auto" href="/auth/google" tabindex="0">
            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 48 48">
              <defs>
                <path id="a" d="M44.5 20H24v8.5h11.8C34.7 33.9 30.1 37 24 37c-7.2 0-13-5.8-13-13s5.8-13 13-13c3.1 0 5.9 1.1 8.1 2.9l6.4-6.4C34.6 4.1 29.6 2 24 2 11.8 2 2 11.8 2 24s9.8 22 22 22c11 0 21-8 21-22 0-1.3-.2-2.7-.5-4z"/>
              </defs>
              <clipPath id="b">
                <use xlink:href="#a" overflow="visible"/>
              </clipPath>
              <path clip-path="url(#b)" fill="#FBBC05" d="M0 37V11l17 13z"/>
              <path clip-path="url(#b)" fill="#EA4335" d="M0 11l17 13 7-6.1L48 14V0H0z"/>
              <path clip-path="url(#b)" fill="#34A853" d="M0 37l30-23 7.9 1L48 0v48H0z"/>
              <path clip-path="url(#b)" fill="#4285F4" d="M48 48L17 24l-4-3 35-10z"/>
            </svg>
            Continue with Google
          </a>
        </div>
        <footer class="mt-auto">
          <p class="text-black/60 text-center text-sm">
            PTC Subject Reservation System
          </p>
        </footer>
      </section>
      <section class="grow h-[300px] lg:h-auto grid relative lg:rounded-l-3xl lg:mx-0 place-items-center overflow-hidden">
        <img 
          class="absolute left-0 top-0 -z-10 object-cover h-full" 
          data-lazy-src="/assets/image/login-side-banner.webp" 
          src="data:image/gif;base64,UklGRjIAAABXRUJQVlA4ICYAAABwAQCdASoBAAEAAUAmJYgCdAFAAAD++fsDXFzZEUfuj97fxyzQAA==" 
          alt="PTC front view" 
          width="4000" 
          height="2457" 
          />
      </section>
    </main>
  </body>
</html>
