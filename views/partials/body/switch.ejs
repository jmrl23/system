<!-- 
  Usage: 

  include('partials/body/switch', {
    checkbox_name: <string>,       // optional
    checkbox_id: <string>,         // optional
    checkbox_checked: <boolean>,   // optional, default: false
  })

-->

<label class="w-[50px] h-[25px] rounded-full inline-block relative bg-gray-200 overflow-hidden shadow">
  <input 
    class="peer hidden" 
    type="checkbox" 
    title="checkbox" 
    name="<%= typeof checkbox_name === 'string' ? checkbox_name : '' %>" 
    id="<%= typeof checkbox_id === 'string' ? checkbox_id : '' %>" 
    <%= typeof checkbox_checked !== 'boolean' ? '' : (checkbox_checked ? 'checked' : '') %>
  />
  <span 
    class="w-full h-full left-0 top-0 p-[2px] peer-checked:bg-green-200 absolute transition-colors
      before:content-[''] before:w-[17px] before:h-[17px] before:bg-white before:shadow before:rounded-full before:absolute before:left-[4px] before:top-[4px]
      peer-checked:before:translate-x-[24px] before:transition-transform
    "
  >
  </span>
</label>